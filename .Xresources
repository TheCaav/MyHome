!! URxvt Appearance
URxvt.font: xft:Monaco:style=Regular:size=12
URxvt.boldFont: xft:Monaco:style=Bold:size=12
URxvt.letterSpace: 0
URxvt.lineSpace: 0
!URxvt.geometry: 92x24
URxvt.internalBorder: 24
URxvt.cursorBlink: true
URxvt.cursorUnderline: false
URxvt.saveLines: 20000
URxvt.scrollBar: false
URxvt.scrollBar_right: false
URxvt.urgentOnBell: true
URxvt.depth: 32
URxvt.iso14755: false

!Special colors for man and some zsh terminal stuff
URxvt.colorIT: #FF5858
URxvt.colorBD: #FFB7FF
URxvt.colorUL: #87CEFA

!Disable scroll for stuff like less...
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0

!black
*color0:  #171717
*color8:  #737373

!red
*color1:  #FF5E5E
*color9:  #FF7878

!green
*color2:  #9CE82B
*color10: #9ACD32

!yellow
*color3:  #F0E68C
*color11: #EEE8AA

!blue
*color4:  #008AFF
*color12: #4F98FF

!magenta
*color5:  #E88CFF
*color13: #EDA6FF

!cyan
*color6:  #87CEFA
*color14: #B0E2FF

!white
*color7:  #DCDCCC
*color15: #FFFFFF

URxvt.background: [90]#101010
*foreground: #d4d4d4

!Keybind fixes
!execute "bindkey" in Terminal to see codes
URxvt.keysym.Shift-Control-Right: \033[1;6C
URxvt.keysym.Shift-Control-Left: \033[1;6D

